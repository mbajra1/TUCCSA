<%= form_for @mailing_address, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address_line1, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address_line1, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address_line2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address_line2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :state_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :zip, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :zip, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cs_application_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :cs_application_id, :class => 'number_field' %>
    </div>
  </div>
  <%= f.hidden_field :cs_application_id, :value => current_user.cs_application.id%>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                mailing_addresses_path, :class => 'btn' %>
  </div>
<% end %>
