<%- model_class = MailingAddres -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @mailing_address.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_line1) %>:</strong></dt>
  <dd><%= @mailing_address.address_line1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_line2) %>:</strong></dt>
  <dd><%= @mailing_address.address_line2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @mailing_address.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state_id) %>:</strong></dt>
  <dd><%= @mailing_address.state_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip) %>:</strong></dt>
  <dd><%= @mailing_address.zip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cs_application_id) %>:</strong></dt>
  <dd><%= @mailing_address.cs_application_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              mailing_addresses_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mailing_address_path(@mailing_address), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mailing_address_path(@mailing_address),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
