<%= form_for @contact, method: :put, url: wizard_path do |contact| %>

    <div class="page-header">
      <h1><%=t '.title', :default => t('Your Application', :default => "Your Application") %></h1>
    </div>

    <h3>Provide Your Mailing Information</h3>
    <br />

    <fieldset>

      <div class="control-group">
        <%= contact.label :name, :class => 'control-label' %>
        <div class="controls">
          <%= contact.text_field :name, :class => 'text_field' %>
          <% unless !@contact.errors.has_key?(:name)%>
              <span class="help-inline"><%= @contact.errors[:name].join(", ") %></span>
          <%end%>
        </div>
      </div>
      <div class="control-group">
        <%= contact.label :address_line1, :class => 'control-label' %>
        <div class="controls">
          <%= contact.text_field :address_line1, :class => 'text_field' %>
          <% unless !@contact.errors.has_key?(:address_line1)%>
              <span class="help-inline"><%= @contact.errors[:address_line1].join(", ") %></span>
          <%end%>
        </div>
      </div>
      <div class="control-group">
        <%= contact.label :address_line2, :class => 'control-label' %>
        <div class="controls">
          <%= contact.text_field :address_line2, :class => 'text_field' %>
          <% unless !@contact.errors.has_key?(:address_line2)%>
              <span class="help-inline"><%= @contact.errors[:address_line2].join(", ") %></span>
          <%end%>
        </div>
      </div>
      <div class="control-group">
        <%= contact.label :city, :class => 'control-label' %>
        <div class="controls">
          <%= contact.text_field :city, :class => 'text_field' %>
          <% unless !@contact.errors.has_key?(:city)%>
              <span class="help-inline"><%= @contact.errors[:city].join(", ") %></span>
          <%end%>
        </div>
      </div>
      <div class="control-group">
        <%= contact.label :state_id, :class => 'control-label' %>
        <div class="controls">
          <%=contact.collection_select(:state_id, State.all, :id, :name, :selected => @contact.state_id) %>
          <% unless !@contact.errors.has_key?(:state_id)%>
              <span class="help-inline"><%= @contact.errors[:state_id][1] %></span>
          <%end%>
        </div>
      </div>
      <br />
      <div class="control-group">
        <%= contact.label :zip, :class => 'control-label' %>
        <div class="controls">
          <%= contact.number_field :zip, :class => 'number_field' %>
          <% unless !@contact.errors.has_key?(:zip)%>
              <span class="help-inline"><%= @contact.errors[:zip].join(", ") %></span>
          <%end%>
        </div>
      </div>

      <div class="form-actions">
        <%= link_to t('.back'), edit_cs_application_path(@cs_application), :class => 'btn btn-default' %>
        <%= contact.submit "Next", :class => 'btn' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")), cs_applications_path, :class => 'btn btn-warning' %>
      </div>

    </fieldset>
<% end %>