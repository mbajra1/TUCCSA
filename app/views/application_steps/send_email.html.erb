<%= form_for @cs_application, url: wizard_path, :html => { :class => 'form-horizontal' }  do |f|  %>

	<div class="page-header">
  		<h1><%=t '.title', :default => t('Your Application', :default => "Your Application") %></h1>
	</div>
	<h3>Send Invitations for Recommendation</h3>
	<br />
	<h4>Recommendation 1</h4>
	<% if !@cs_application.recommendations.first.nil? %>
		<% @recommendation1 = @cs_application.recommendations.first%>
		Name: <%= @recommendation1.name%> <br />
		Title: <%= @recommendation1.title%> <br />
		Email: <%= @recommendation1.email%> <br />
		<% if !@recommendation1.email.nil? %>
			<% if @recommendation1.status==1 || @recommendation1.status==2%>
				<strong>Invitation Sent</strong>
			<%else%>
				<%= link_to "Send Invitation", send_invitation_path(@recommendation1) %>
			<% end%>
			
		<% else %>
			<strong>*Please enter all information</strong>
		<% end %>
	<% else%>
		Information not available
	<% end%>
	<h4>Recommendation 2</h4>
	<% if !@cs_application.recommendations.second.nil? %>
		<% @recommendation2 = @cs_application.recommendations.second%>
		Name: <%= @recommendation2.name%> <br />
		Title: <%= @recommendation2.title%> <br />
		Email: <%= @recommendation2.email%> <br />
		<% if !@recommendation2.email.nil?%>
			<% if @recommendation2.status==1 || @recommendation2.status==2%>
				<strong>Invitation Sent</strong>
			<%else%>
				<%= link_to "Send Invitation", send_invitation_path(@recommendation2) %>
			<% end%>
			
		<% else %>
			<strong>*Please enter all information</strong>
		<% end %>
	<% else%>
		Information not available
	<% end%>
	<hr />


	<div class="form-actions">
		<%= link_to t('.back'), previous_wizard_path, :class => 'btn' %>
		<%= f.submit "Next", :class => 'btn btn-primary' %>
		<%= link_to t('.cancel', :default => t("helpers.links.cancel")), cs_applications_path, :class => 'btn' %>
	</div>

<% end%>