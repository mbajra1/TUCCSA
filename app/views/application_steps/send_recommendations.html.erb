<%= form_for @recommendation, method: :put, url: wizard_path, :html => { :class => 'form-horizontal' }  do |recommendation|  %>

    <% if @recommendation.errors.any? %>
        <div class="error_messages">
          <% @recommendation.errors.full_messages.each do |error| %>
              <p><%= error %></p>
          <% end %>
        </div>
    <% end %>

    <div class="page-header">
  		<h1><%=t '.title', :default => t('Your Application', :default => "Your Application") %></h1>
	</div>
	<h3>Send Invitations for Recommendation</h3>
	<br />
	You need two letters of recommendations to complete this application. Fill the following form to send electronic
	recommendation invitations.
	<hr />
	
	<%= fields_for :recommendation1 do |recommendation|%>
	<div class="control-group">
		<%= recommendation.label :name, :class => 'control-label' %>
		<div class="controls">
          <%= recommendation.text_field :name, :class => 'text_field' %>
          <% unless !@recommendation.errors.has_key?(:name)%>
              <span class="help-inline"><%= @recommendation.errors[:name].join(", ") %></span>
          <%end%>
		</div>
	</div>
	<div class="control-group">
		<%= recommendation.label :title, :class => 'control-label' %>
		<div class="controls">
          <%= recommendation.text_field :title, :class => 'text_field' %>
          <% unless !@recommendation.errors.has_key?(:title)%>
              <span class="help-inline"><%= @recommendation.errors[:title].join(", ") %></span>
          <%end%>
		</div>
	</div>
	<div class="control-group">
		<%= recommendation.label :email, :class => 'control-label' %>
		<div class="controls">
          <%= recommendation.email_field :email, :class => 'email_field' %>
          <% unless !@recommendation.errors.has_key?(:email)%>
              <span class="help-inline"><%= @recommendation.errors[:email].join(", ") %></span>
          <%end%>
		</div>
	</div>

	<%end%>
	
	<hr />
	
	<%= fields_for :recommendation2 do |recommendation|%>
	<div class="control-group">
		<%= recommendation.label :name, :class => 'control-label' %>
		<div class="controls">
          <%= recommendation.text_field :name, :class => 'text_field' %>
          <% unless !@recommendation.errors.has_key?(:name)%>
              <span class="help-inline"><%= @recommendation.errors[:name].join(", ") %></span>
          <%end%>
		</div>
	</div>
	<div class="control-group">
		<%= recommendation.label :title, :class => 'control-label' %>
		<div class="controls">
          <%= recommendation.text_field :title, :class => 'text_field' %>
          <% unless !@recommendation.errors.has_key?(:title)%>
              <span class="help-inline"><%= @recommendation.errors[:title].join(", ") %></span>
          <%end%>
		</div>
	</div>
	<div class="control-group">
		<%= recommendation.label :email, :class => 'control-label' %>
		<div class="controls">
          <%= recommendation.email_field :email, :class => 'email_field' %>
          <% unless !@recommendation.errors.has_key?(:email)%>
              <span class="help-inline"><%= @recommendation.errors[:email].join(", ") %></span>
          <%end%>
		</div>
	</div>

	<%end%>
	<hr />
	<div>
		You will get options to send invitations in next page.
	</div>
	<div class="form-actions">
		<%= link_to t('.back'), previous_wizard_path, :class => 'btn btn-default' %>
		<%= recommendation.submit "Next", :class => 'btn btn-success' %>
		<%= link_to t('.cancel', :default => t("helpers.links.cancel")), cs_applications_path, :class => 'btn btn-warning' %>
	</div>

<% end%>
<br /><br />