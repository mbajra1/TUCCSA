<%= form_for @recommendation, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :cs_application_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :cs_application_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time_known_from, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :time_known_from, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time_known_to, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :time_known_to, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :status, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                recommendations_path, :class => 'btn' %>
  </div>
<% end %>
