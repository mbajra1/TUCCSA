<%= form_for [@recommendation1,@recommendation2], method: :put, :html => { :class => 'form-horizontal' }  do |recommendation|  %>

<%= fields_for :recommendation1 do |recommendation|%>
        <div class="control-group">
          <%= recommendation.label :name, :class => 'control-label' %>
          <div class="controls">
            <%= recommendation.text_field :name, :class => 'text_field' %>
            <% unless !@recommendation1.errors.has_key?(:name)%>
                <span class="help-inline"><%= @recommendation1.errors[:name].join(", ") %></span>
            <%end%>
          </div>
        </div>
        <div class="control-group">
          <%= recommendation.label :title, :class => 'control-label' %>
          <div class="controls">
            <%= recommendation.text_field :title, :class => 'text_field' %>
            <% unless !@recommendation1.errors.has_key?(:title)%>
                <span class="help-inline"><%= @recommendation1.errors[:title].join(", ") %></span>
            <%end%>
          </div>
        </div>
        <div class="control-group">
          <%= recommendation.label :email, :class => 'control-label' %>
          <div class="controls">
            <%= recommendation.email_field :email, :class => 'email_field' %>
            <% unless !@recommendation1.errors.has_key?(:email)%>
                <span class="help-inline"><%= @recommendation1.errors[:email].join(", ") %></span>
            <%end%>
          </div>
        </div>

    <%end%>

    <hr />

    <%= fields_for :recommendation2 do |recommendation|%>
        <div class="control-group">
          <%= recommendation.label :name, :class => 'control-label' %>
          <div class="controls">
            <%= recommendation.text_field :name, :class => 'text_field' %>
            <% unless !@recommendation2.errors.has_key?(:name)%>
                <span class="help-inline"><%= @recommendation2.errors[:name].join(", ") %></span>
            <%end%>
          </div>
        </div>
        <div class="control-group">
          <%= recommendation.label :title, :class => 'control-label' %>
          <div class="controls">
            <%= recommendation.text_field :title, :class => 'text_field' %>
            <% unless !@recommendation2.errors.has_key?(:title)%>
                <span class="help-inline"><%= @recommendation2.errors[:title].join(", ") %></span>
            <%end%>
          </div>
        </div>
        <div class="control-group">
          <%= recommendation.label :email, :class => 'control-label' %>
          <div class="controls">
            <%= recommendation.email_field :email, :class => 'email_field' %>
            <% unless !@recommendation2.errors.has_key?(:email)%>
                <span class="help-inline"><%= @recommendation2.errors[:email].join(", ") %></span>
            <%end%>
          </div>
        </div>

    <%end%>

  <div class="form-actions">
    <%= recommendation.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                recommendations_path, :class => 'btn' %>
  </div>
<% end %>
